    <TextView
        android:id="@+id/game_current_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/game_score_margin_top"
        android:text="@string/game_current_score_label"
        android:textSize="@dimen/game_score_text_size"/>

    <TextView
        android:id="@+id/game_current_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_current_score_label"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="@dimen/game_score_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ball"/>

